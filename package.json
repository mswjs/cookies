    "@types/set-cookie-parser": "^2.4.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-miniflare": "^2.14.1",
    "rimraf": "^5.0.5",
